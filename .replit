run = ["streamlit", "run", "computer_use_demo/streamlit.py"]
modules = ["python-3.11", "web", "bash"]

[nix]
channel = "stable-24_05"
packages = ["gcc", "glibcLocales", "llvm", "ocl-icd", "opencl-headers"]

[[ports]]
localPort = 81
externalPort = 3000

[[ports]]
